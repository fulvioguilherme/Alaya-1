                  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
                    <%= f.label :email  %>
                    <%= f.text_field :email, class: "form-control", placeholder: "Email", required: "required" %>
                  </div>
                </div>
                <br>
                <div class="row">
                  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
                    <%= f.label :password  %>
