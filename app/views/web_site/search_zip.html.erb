<% provide(:title, 'Alert Me When Launch') %>
  
  
  <div class="container content">
    
    <div class-"row">
      <div class="col-md-6 col-md-offset-3">
        
        <div class="headline">
          <h2>Sorry, we are not in your area yet.</h2>
        </div>
        
        <p class="lead">Would you like to get informed when we launch in your area?</p>
        
        <%= form_for @zip_code, as: :zip_code, url: alert_me_when_launch_path, method: :patch do |f| %>
          <div class="input-group">
            <%= f.hidden_field(:id) %>
            <%= f.text_field(:email, class: "form-control", placeholder: "Email", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}') %>
            <span class="input-group-btn">
              <%= f.submit("Tell me when you launch!", class: "btn-u") %>
            </span>
          </div><!-- /input-group -->
        <% end %>
        
        <br><br>
      </div>
    </div>
  </div>

