<% provide(:title, "Change password") %>
<!--=== Container ===-->
  <div class="container content">
    
    <div class="row margin-bottom-30">
      <div class="col-md-10 col-md-offset-1 mb-margin-bottom-30">
        <div class="row margin-bottom-20">
					<div class="col-md-6 col-md-offset-3">
						<div class="headline"><h2>Choose a new password</h2></div>
					</div>                
				</div>
				
				<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
          <% if @user.errors.any? %>
            <% for message in @user.errors.full_messages %>
              <div class="alert alert-danger" role="alert">
                <%= message %>
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              </div>
            <% end %>
          <% end %>
          <div class="row">
    				<div class="col-md-6 col-md-offset-3">
    				  <%= f.label :password, "Password" %>
              <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
    				</div>       
    			</div>
    			<br>
    			<div class="row">
    				<div class="col-md-6 col-md-offset-3">
    				  <%= f.label :password_confirmation, "Password confirmation" %>
              <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control" %>
    				</div>       
    			</div>
    			<br>
    			<div class="row">
    				<div class="col-md-6 col-md-offset-3" align="center">
    				  <%= f.submit "Update Password", class: "btn-u" %>
    				</div>       
    			</div>
        <% end %>
      </div>
    </div><!--/row-->    
  </div>
  <!--=== End Container ===-->

